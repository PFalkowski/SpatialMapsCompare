<Window x:Class="DrawingCanvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawingCanvas"
        mc:Ignorable="d"
        Title="Drawing Canvas" Height="350" Width="525">
    <!--<Window.DataContext>
        <local:DrawingCanvasViewModel></local:DrawingCanvasViewModel>
    </Window.DataContext>-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="288*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button x:Name="saveButton" Content="Done" HorizontalAlignment="Right" Margin="10"  Grid.Row="1" VerticalAlignment="Bottom" Width="75" Click="saveButton_Click"/>
        <Button x:Name="clearButton" Content="Clear" HorizontalAlignment="Left" Margin="10"  Grid.Row="1" VerticalAlignment="Bottom" Width="75" Click="clearButton_Click"/>
        <Canvas x:Name="canvas" Background="Transparent" Grid.Row="0" MouseDown="canvas_MouseDown"/>
        <TextBox x:Name="nameBox" HorizontalAlignment="Center" Height="23" Margin="10" Grid.Row="1" TextWrapping="Wrap" Text="Polygon Name" VerticalAlignment="Top" Width="169"/>

    </Grid>
</Window>
