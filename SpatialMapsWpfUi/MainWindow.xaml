<Window x:Class="SpatialMapsWpfUi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpatialMapsWpfUi"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" MinHeight="300" MinWidth="400">

    <Window.Resources>
        <CollectionViewSource x:Key="LeftCollectionViewSource" CollectionViewType="{x:Type ListCollectionView}"/>
        <CollectionViewSource x:Key="RightCollectionViewSource" CollectionViewType="{x:Type ListCollectionView}"/>
    </Window.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="250*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <DataGrid x:Name="RightDataGrid" Grid.Column="1" HorizontalAlignment="Left"  Grid.Row="1" Margin="10,4,0,10"		
        DataContext="{StaticResource RightCollectionViewSource}"
		ItemsSource="{Binding}"
		CanUserAddRows="True" SelectionChanged="RightDataGrid_SelectionChanged"/>

        <DataGrid x:Name="LeftDataGrid" Grid.Column="0" HorizontalAlignment="Left" Grid.Row="1" Margin="10,4,0,10"		
        DataContext="{StaticResource LeftCollectionViewSource}"
		ItemsSource="{Binding}"
		CanUserAddRows="True" SelectionChanged="LeftDataGrid_SelectionChanged">
        </DataGrid>

        <Button x:Name="OpenLeftFile" Content="Load" Command="{Binding OpenLeftFileCommand}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="75"  Grid.Column="0" Grid.Row="0" Margin="10,6,0,36"/>
        <Button x:Name="OpenRightFile" Content="Load" Command="{Binding OpenRightFileCommand}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="75" Grid.Column="1" Grid.Row="0" Margin="10,6,0,36"/>
        <Button x:Name="DrawLeftFile" Content="Draw" Command="{Binding DrawLeftFileCommand}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="75"  Grid.Column="0" Margin="10,37,0,5"/>
        <Button x:Name="DrawRightFile" Content="Draw" Command="{Binding DrawRightFileCommand}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="75" Grid.Column="1" Margin="10,37,0,5"/>

        <Canvas Name="ChartingCanvas" Grid.Column="2" Margin="10" Grid.Row="1"/>

        <Button x:Name="SaveLeftFile" Content="Save" Command="{Binding SaveLeftFileCommand}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="75"  Grid.Column="0" Grid.Row="2" Margin="10,6,0,5"/>
        <Button x:Name="SaveRightFile" Content="Save" Command="{Binding SaveRightFileCommand}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="75" Grid.Column="1" Grid.Row="2" Margin="10,6,0,5"/>
        <Grid Name="StatusGrid" Grid.Column="2" HorizontalAlignment="Left" Width="622" Height="62" VerticalAlignment="Bottom">

            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="leftPolygonTextBlock" Text="Left polygon" Grid.Row="1"  Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" />
            <TextBlock x:Name="rightPolygonTextBlock" Text="Right polygon" Grid.Row="2"  Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>

            <TextBlock x:Name="areaBlock" Text="Area" Grid.Column="1" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center"/>
            <TextBlock x:Name="leftAreaBlock" Text="{Binding LeftPolyArea}" Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center"/>

        </Grid>


    </Grid>
    <Window.InputBindings>
        <KeyBinding Key="F5" Command="{Binding PrintLeftFileToCanvas}" />
    </Window.InputBindings>
</Window>
