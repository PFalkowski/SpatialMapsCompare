<Window x:Class="SpatialMapsWpfUi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpatialMapsWpfUi"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <local:SpatialMapsViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="288*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dataGridOriginal" Grid.Column="0" HorizontalAlignment="Left" Margin="10,1,0,10" Width="119" Grid.Row="1" ItemsSource="{Binding pointsLeft}"/>
        <DataGrid x:Name="dataGridCompared" Grid.Column="1" HorizontalAlignment="Left" Margin="10,1,0,10" Width="119" Grid.Row="1" ItemsSource="{Binding Model.RightPoly.Points, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="X" Binding="{Binding Path=Model.RightPoly.Points}"/>
                <DataGridTextColumn Header="Y" Binding="{Binding Path=Date}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="LoadOriginalFromXml" Content="Load" Command="{Binding OpenLeftFileCommand}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75"  Grid.Column="0" Grid.Row="0"/>
        <Button x:Name="LoadComparedFromXml" Content="Load" Command="{Binding OpenRightFileCommand}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Grid.Column="1" Grid.Row="0"/>

    </Grid>
</Window>
